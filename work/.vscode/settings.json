{
    "perforce.activationMode": "always",
    "perforce.client": "CLIENT_WORKPLACE_NAME_HERE",
    "perforce.annotate.changelist": true,
    // Do not autosave files
    "files.autoSave": "off",
    // Run ESLint on opened/edited files.
    "eslint.enable": true,
    // Display ESLint in status bar.
    "eslint.alwaysShowStatus": true,
    // Turn off VS Code's default javascript formatter.
    "javascript.format.enable": false,
    // Set ESLint to fix code upon saving
    "eslint.autoFixOnSave": true,
    // Use Prettier as an autoformatter for javascript and javascriptreact
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.formatOnSave": true
    },
    // Prettier allows ESLint to override.
    "prettier.eslintIntegration": true,
    // Use Prettier as an autoformatter for postcss
    "[postcss]": {
        "editor.formatOnSave": true
    },
    "prettier.tabWidth": 4,
}
